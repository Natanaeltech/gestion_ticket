<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Système de Tickets{% endblock %}</title>
    
    {# Inclusion de Bootstrap CSS pour le style #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    {# Inclusion de Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    {# Styles personnalisés #}
    {% block stylesheets %}
        <style>
            /* Style pour la sidebar */
            .sidebar {
                min-height: 100vh;
                background-color: #343a40;
            }
            
            .sidebar .nav-link {
                color: #adb5bd;
                padding: 0.75rem 1rem;
            }
            
            .sidebar .nav-link:hover {
                color: #fff;
                background-color: #495057;
            }
            
            .sidebar .nav-link.active {
                color: #fff;
                background-color: #0d6efd;
            }
            
            /* Style pour les cartes de ticket */
            .ticket-card {
                transition: transform 0.2s, box-shadow 0.2s;
            }
            
            .ticket-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }
            
            /* Style pour le header */
            .app-header {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }
            
            /* Badges personnalisés */
            .badge {
                font-size: 0.85rem;
                padding: 0.35rem 0.65rem;
            }
        </style>
    {% endblock %}
</head>
<body>
    {# Navigation principale #}
    <nav class="navbar navbar-expand-lg navbar-dark app-header">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_ticket_index') }}">
                <i class="bi bi-ticket-detailed"></i> Système de Tickets
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if app.user %}
                        {# Menu pour les utilisateurs connectés #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_ticket_index') }}">
                                <i class="bi bi-list-ul"></i> Mes Tickets
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_ticket_new') }}">
                                <i class="bi bi-plus-circle"></i> Nouveau Ticket
                            </a>
                        </li>
                        
                        {# Menu spécial pour les techniciens #}
                        {% if is_granted('ROLE_TECHNICIEN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ticket_dashboard') }}">
                                    <i class="bi bi-speedometer2"></i> Tableau de bord
                                </a>
                            </li>
                        {% endif %}
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> {{ app.user.nomComplet }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Profil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Déconnexion</a></li>
                            </ul>
                        </li>
                    {% else %}
                        {# Menu pour les visiteurs non connectés #}
                        <li class="nav-item">
                            <a class="nav-link" href="#">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {# Zone d'affichage des messages flash (succès, erreur, etc.) #}
    <div class="container mt-3">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {# Contenu principal de la page #}
    <main class="container-fluid">
        <div class="row">
            {# Sidebar pour la navigation secondaire (optionnelle) #}
            {% block sidebar %}{% endblock %}
            
            {# Contenu principal #}
            <div class="col-md-{{ block('sidebar') is defined and block('sidebar')|trim ? '10' : '12' }} py-4">
                {% block body %}{% endblock %}
            </div>
        </div>
    </main>

    {# Footer #}
    <footer class="mt-5 py-3 bg-light border-top">
        <div class="container text-center text-muted">
            <p class="mb-0">© 2024 Système de Gestion de Tickets - Tous droits réservés</p>
        </div>
    </footer>

    {# Scripts JavaScript #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    {% block javascripts %}
        <script>
            // Confirmation avant suppression
            document.querySelectorAll('.delete-confirm').forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')) {
                        e.preventDefault();
                    }
                });
            });
        </script>
    {% endblock %}
</body>
</html>
