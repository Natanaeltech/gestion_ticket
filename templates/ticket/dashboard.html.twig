{# Template du tableau de bord avec statistiques pour les techniciens #}
{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container-fluid">
    {# En-tête du dashboard #}
    <div class="mb-4">
        <h1 class="mb-2">
            <i class="bi bi-speedometer2 text-primary"></i>
            Tableau de bord technique
        </h1>
        <p class="text-muted">Vue d'ensemble de tous les tickets du système</p>
    </div>

    {# Cartes de statistiques principales #}
    <div class="row mb-4">
        {# Total des tickets #}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total tickets</h6>
                            <h2 class="mb-0">{{ totalTickets }}</h2>
                        </div>
                        <div>
                            <i class="bi bi-ticket-detailed display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Tickets ouverts #}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-info shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Ouverts</h6>
                            <h2 class="mb-0">{{ ticketsOuverts }}</h2>
                            <small>
                                {% if totalTickets > 0 %}
                                    {{ ((ticketsOuverts / totalTickets) * 100)|round }}%
                                {% else %}
                                    0%
                                {% endif %}
                            </small>
                        </div>
                        <div>
                            <i class="bi bi-folder-plus display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Tickets en cours #}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">En cours</h6>
                            <h2 class="mb-0">{{ ticketsEnCours }}</h2>
                            <small>
                                {% if totalTickets > 0 %}
                                    {{ ((ticketsEnCours / totalTickets) * 100)|round }}%
                                {% else %}
                                    0%
                                {% endif %}
                            </small>
                        </div>
                        <div>
                            <i class="bi bi-hourglass-split display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Tickets résolus #}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Résolus</h6>
                            <h2 class="mb-0">{{ ticketsResolus }}</h2>
                            <small>
                                {% if totalTickets > 0 %}
                                    {{ ((ticketsResolus / totalTickets) * 100)|round }}%
                                {% else %}
                                    0%
                                {% endif %}
                            </small>
                        </div>
                        <div>
                            <i class="bi bi-check-circle display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Cartes secondaires #}
    <div class="row mb-4">
        {# Priorités urgentes #}
        <div class="col-md-6 mb-3">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        Tickets urgents
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 text-center">
                            <h3 class="text-danger mb-0">{{ prioriteUrgente }}</h3>
                            <small class="text-muted">Priorité URGENTE</small>
                        </div>
                        <div class="col-6 text-center">
                            <h3 class="text-warning mb-0">{{ prioriteHaute }}</h3>
                            <small class="text-muted">Priorité HAUTE</small>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('app_ticket_index') }}" class="btn btn-danger btn-sm w-100">
                            <i class="bi bi-arrow-right-circle"></i>
                            Voir tous les tickets urgents
                        </a>
                    </div>
                </div>
            </div>
        </div>

        {# Tickets fermés #}
        <div class="col-md-6 mb-3">
            <div class="card border-secondary shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-archive-fill"></i>
                        Tickets archivés
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h3 class="mb-0">{{ ticketsFermes }}</h3>
                        <small class="text-muted">Tickets fermés</small>
                    </div>
                    <div class="progress" style="height: 25px;">
                        {% set totalTraites = ticketsResolus + ticketsFermes %}
                        {% set pourcentageTraites = totalTickets > 0 ? ((totalTraites / totalTickets) * 100)|round : 0 %}
                        <div class="progress-bar bg-success" style="width: {{ pourcentageTraites }}%">
                            {{ pourcentageTraites }}% traités
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Graphiques et statistiques supplémentaires #}
    <div class="row">
        {# Répartition par statut #}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-pie-chart"></i>
                        Répartition par statut
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="statutChart"></canvas>
                </div>
            </div>
        </div>

        {# Activité récente #}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i>
                        Résumé de performance
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Métrique</th>
                                <th class="text-end">Valeur</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <i class="bi bi-clipboard-check text-success"></i>
                                    Taux de résolution
                                </td>
                                <td class="text-end">
                                    <strong class="text-success">
                                        {% if totalTickets > 0 %}
                                            {{ ((ticketsResolus / totalTickets) * 100)|round }}%
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </strong>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="bi bi-hourglass text-warning"></i>
                                    Tickets en attente
                                </td>
                                <td class="text-end">
                                    <strong class="text-warning">
                                        {{ ticketsOuverts + ticketsEnCours }}
                                    </strong>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="bi bi-check-all text-primary"></i>
                                    Tickets clôturés
                                </td>
                                <td class="text-end">
                                    <strong class="text-primary">{{ ticketsFermes }}</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# Actions rapides #}
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-lightning-fill text-warning"></i>
                Actions rapides
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center mb-3">
                    <a href="{{ path('app_ticket_index') }}" class="btn btn-outline-primary w-100">
                        <i class="bi bi-list-ul fs-3 d-block mb-2"></i>
                        Voir tous les tickets
                    </a>
                </div>
                <div class="col-md-3 text-center mb-3">
                    <a href="{{ path('app_ticket_new') }}" class="btn btn-outline-success w-100">
                        <i class="bi bi-plus-circle fs-3 d-block mb-2"></i>
                        Créer un ticket
                    </a>
                </div>
                <div class="col-md-3 text-center mb-3">
                    <button class="btn btn-outline-warning w-100" onclick="window.location.reload()">
                        <i class="bi bi-arrow-clockwise fs-3 d-block mb-2"></i>
                        Actualiser
                    </button>
                </div>
                <div class="col-md-3 text-center mb-3">
                    <button class="btn btn-outline-info w-100" onclick="window.print()">
                        <i class="bi bi-printer fs-3 d-block mb-2"></i>
                        Imprimer rapport
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Inclusion de Chart.js pour les graphiques #}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <script>
        // Graphique en camembert pour la répartition par statut
        const ctx = document.getElementById('statutChart').getContext('2d');
        
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Ouverts', 'En cours', 'Résolus', 'Fermés'],
                datasets: [{
                    data: [
                        {{ ticketsOuverts }},
                        {{ ticketsEnCours }},
                        {{ ticketsResolus }},
                        {{ ticketsFermes }}
                    ],
                    backgroundColor: [
                        '#0dcaf0', // Info (Ouverts)
                        '#ffc107', // Warning (En cours)
                        '#198754', // Success (Résolus)
                        '#6c757d'  // Secondary (Fermés)
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.parsed || 0;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                return `${label}: ${value} (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });

        // Animation au chargement des cartes
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.5s ease';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 50);
                }, index * 100);
            });
        });
    </script>
{% endblock %}
